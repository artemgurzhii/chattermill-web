<div class="w-full max-w-xs">
  <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
        {{t "forms.username"}}
      </label>

      <Input
        class="shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight"
        id="username"
        type="text"
        placeholder={{t "forms.username"}}
        autocomplete="username"
        @value={{this.username}}
      />
    </div>

    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        {{t "forms.password"}}
      </label>

      <Input
        class="shadow border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight"
        autocomplete="current-password"
        id="password"
        type="password"
        placeholder="******************"
        @value={{this.password}}
      />
    </div>

    <div class="flex justify-center">
      <button
        class="bg-blue-500 w-full hover:bg-blue-700 text-white font-bold py-2 px-4 rounded {{if this.disableSubmit "opacity-50 cursor-not-allowed"}}"
        type="button"
        disabled={{this.disableSubmit}}
        {{on "click" (perform this.submit)}}
      >
        {{t "buttons.sign_in"}}
      </button>
    </div>
  </form>
</div>
